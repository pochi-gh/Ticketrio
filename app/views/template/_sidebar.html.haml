.wrapper__side_bar
  .wrapper__side_bar__search
    %input.wrapper__side_bar__search--area
  .wrapper__side_bar__result
  .wrapper__side_bar__main
    .wrapper__side_bar__main__artist_name
      = @artist.artist_name
    -if user_signed_in?
      = form_with url: search_lives_path ,class:'live_add',method: "get", local:"ture"  do |form|
        %p
          = form.label "日付"
          = form.date_select :data, use_month_numbers: true
        %p
          = form.label "時間"
          = form.time_select :time, ignore_data:true
        %p
          = form.label "開催地"
          = form.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "---", class: 'select_prefecture'
          = form.hidden_field :artist_id, value:@artist.id
        = form.submit


    .wrapper__side_bar__main__live
    - @artist.artist_concerts.each do |artist_concert|
      .wrapper__side_bar__main__live__box
        =link_to "", tickets_path(artist_id: artist_concert.artist_id, live_id: artist_concert.live_id)
        .wrapper__side_bar__main__live__box--upper
          .wrapper__side_bar__main__live__box--upper__title
            = artist_concert.live.title
        .wrapper__side_bar__main__live__box--middle
          .wrapper__side_bar__main__live__box--middle__date
            = artist_concert.live.data.strftime("%Y/%m/%d")
          .wrapper__side_bar__main__live__box--middle__time
            = artist_concert.live.time.to_s(:time_jp)
            開演
        .wrapper__side_bar__main__live__box--lower
          .wrapper__side_bar__main__live__box--lower__prefectures
            = artist_concert.live.prefecture.name  
          .wrapper__side_bar__main__live__box--lower__hall
            = artist_concert.live.hall
